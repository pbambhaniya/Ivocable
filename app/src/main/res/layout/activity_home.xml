<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#3d959d"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/nav_close"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:rotation="90"
                    android:src="@mipmap/manuicon_white" />

            </LinearLayout>

            <View style="@style/cus_devider"></View>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/ll_nav_imgmaths"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nav_imgmaths"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/nav_maths" />

                            <TextView
                                android:id="@+id/nav_txtmaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maths"
                                android:textColor="@color/colorwhite"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/maths_drawer_lock"
                            android:layout_marginRight="3dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/lock" />

                    </RelativeLayout>


                    <View style="@style/cus_devider"></View>

                    <RelativeLayout
                        android:id="@+id/ll_nav_imgbiology"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nav_imgbiology"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/nav_biology" />

                            <TextView
                                android:id="@+id/nav_txtbiology"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biology"
                                android:textColor="@color/colorwhite"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/biology_drawer_lock"
                            android:layout_marginRight="3dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/lock" />


                    </RelativeLayout>

                    <View style="@style/cus_devider"></View>

                    <RelativeLayout
                        android:id="@+id/ll_nav_imgphysics"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nav_imgphysics"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/nav_physics" />

                            <TextView
                                android:id="@+id/nav_txtphysics"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Physics"
                                android:textColor="@color/colorwhite"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/physics_drawer_lock"
                            android:layout_marginRight="3dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/lock"  />

                    </RelativeLayout>

                    <View style="@style/cus_devider"></View>

                    <RelativeLayout
                        android:id="@+id/ll_nav_imgchemistry"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/nav_imgchemistry"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/nav_chemistry" />

                            <TextView
                                android:id="@+id/nav_txtchemistry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chemistry"
                                android:textColor="@color/colorwhite"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/chemistry_drawer_lock"
                            android:layout_marginRight="3dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/lock"  />

                    </RelativeLayout>

                    <View style="@style/cus_devider"></View>

                    <LinearLayout
                        android:id="@+id/ll_nav_imgshare"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/nav_imgshare"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nav_share" />

                        <TextView
                            android:id="@+id/nav_txtshare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@color/colorwhite"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View style="@style/cus_devider"></View>

                    <LinearLayout
                        android:id="@+id/ll_nav_imgfavorite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/nav_imgfavorite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nav_fav" />

                        <TextView
                            android:id="@+id/nav_txtfavourite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favourite"
                            android:textColor="@color/colorwhite"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View style="@style/cus_devider"></View>

                    <LinearLayout
                        android:id="@+id/ll_nav_imgactivity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/nav_activity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nav_activity" />

                        <TextView
                            android:id="@+id/nav_txtactivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Activity"
                            android:textColor="@color/colorwhite"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View style="@style/cus_devider"></View>

                    <LinearLayout
                        android:id="@+id/ll_nav_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/nav_imgabout"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_about" />

                        <TextView
                            android:id="@+id/nav_txtabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textColor="@color/colorwhite"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
