<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <com.multipz.dictionary.Activity.HorizontalListView
            android:id="@+id/list_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

        </com.multipz.dictionary.Activity.HorizontalListView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:visibility="gone">

        </ListView>

        <TextView
            android:id="@+id/No_data_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Data Found"
            android:textSize="30dp"
            android:textStyle="normal"
            android:visibility="gone" />

        <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab_ripple"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="-215dp"
            android:layout_marginRight="-215dp"
            app:rb_color="@color/colorPrimaryDark"
            app:rb_duration="3000"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_scale="6">

            <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fab_add_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add_word"
                app:backgroundTint="@color/colorwhite"
                app:borderWidth="0dp" />
        </com.skyfishjy.library.RippleBackground>
    </FrameLayout>


</LinearLayout>

